{
  "name": "nandorojo-tamagui",
  "displayName": "nandorojo-tamagui",
  "description": "Tokens & colors as you type.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nandorojo-tamagui.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Tamagui Intellisense by Fernando Rojo",
      "properties": {
        "nandorojo-tamagui.configPath": {
          "type": "string",
          "default": "./tamagui.config.ts",
          "description": "The path to your tamagui.config.ts file, relative to the root of your repository."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "comment": "the script below is needed for vercel",
    "build": "compile"
  },
  "devDependencies": {
    "@tamagui/shorthands": "^1.49.7",
    "@tamagui/themes": "^1.49.7",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.18",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tamagui": "^1.49.7",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@tamagui/static": "^1.49.7",
    "@vercel/og": "^0.5.10",
    "html-tags": "^3.3.1",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "prettier": {
    "singleQuote": false,
    "semi": false
  }
}
